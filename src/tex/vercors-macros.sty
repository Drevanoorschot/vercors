\ProvidesPackage{vercors-macros}

\newcommand{\checkfile}[1]{
\IfFileExists{#1}{}{
% report error on terminal
\errmessage{Could not find #1. Did you include pathto/examples// in TEXINPUTS?}
% include message as text in case of batch compilation
Could not find #1. Did you include pathto/examples// in TEXINPUTS?
}}

\newcommand{\pvlfloat}[4]{
\checkfile{#1}
\begin{table}[tp]
\lstinputlisting[style=ourstyle,language=pvl,linerange={#2}]{#1}
\caption{#3}\label{#4}
\end{table}
}

