// class Node
var parent: Ref

function find(struct: Ref, this:Ref) : Ref
  requires struct != null && this != null && acc(inv(struct), wildcard) && this in allNodes(struct)
  ensures result != null && result in allNodes(struct)
{
  unfolding acc(inv(struct), wildcard) in this == this.parent ? this : find(struct, this.parent)
}

