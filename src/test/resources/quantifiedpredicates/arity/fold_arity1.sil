field f:Int
field g:Int


predicate p1()
{
	true
}

predicate p2(r:Ref)
{
    acc(r.f)
}

predicate p3(r:Ref)
{
	acc(r.f) && r.f == 0
}

predicate p4(r:Ref, i:Int)
{
    acc(r.f)
}

predicate p5(r:Ref, i:Int)
{
    acc(r.f) && r.f == i
}

