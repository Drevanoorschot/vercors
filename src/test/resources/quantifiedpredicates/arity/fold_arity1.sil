method m2(x: Ref, xs: Seq[Ref])
requires x in xs
requires forall r:Ref :: r in xs ==> acc(p3(r))
{
    unfold acc(p3(x))
    assert(x.f == 0)
    x.f := 4
    fold acc(p3(x))
}

method m3(x: Ref, xs: Seq[Ref])
requires x in xs
requires forall r:Ref :: r in xs ==> acc(p3(r))
ensures acc(p3(x))
{
    unfold acc(p3(x))
    assert(x.f == 0)
    fold acc(p3(x))
}

