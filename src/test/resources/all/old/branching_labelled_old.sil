field f: Int

method main(i:Int) {
  var m: Ref
  m := new (*)
  m.f := i

  if(m.f != 15){
    m.f := 15
    statelabel initial
  }

  m.f := 3

  //shouldn't work because the state label is undefined on at least one execution path => fails
  //:: ExpectedOutput(internal:labelled.state.not.reached)
  assert m.f == 3 && old[initial](m.f) == 15
}

method main3() {
  var m: Ref
  m := new (*)

  m.f := 15

  // shouldn't work because the statelabels is inside a loop => fails further down
  while(m.f != 3)
    invariant acc(m.f)
  {
    statelabel initial;
    m.f := m.f - 1;
  }

  //:: ExpectedOutput(internal:labelled.state.not.reached)
  assert m.f == 3 && old[initial](m.f) == 15
}
