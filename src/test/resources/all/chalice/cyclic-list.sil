var value: Int
var next: Ref

predicate valid(this: Ref) {
     acc(this.value, write)
  && acc(this.next, write)
  && (((this.next) != (null)) ==> acc(this.next.valid(), write))
}

function length(this: Ref): Int
  requires acc(this.valid(), write)
  ensures result > 0
{ (unfolding acc(this.valid(), write) in (((this.next) == (null)) ? 1 : 1 + length(this.next))) }

function itemAt(this: Ref, i: Int): Int
  requires acc(this.valid(), write)
  requires 0 <= i
  requires i < length(this)
{ (unfolding acc(this.valid(), write) in (((i) == (0)) || ((this.next) == (null)) ? this.value : itemAt(this.next, i - 1))) }

method test1(this: Ref)
{
  var x: Ref

  x := new()
  x.next := x

  //:: ExpectedError(fold.failed:insufficient.permission)
  fold acc(x.valid(), write)
}

method test2(this: Ref)
{
  var x: Ref

  x := new()
  x.next := x

  //:: ExpectedError(application.precondition:insufficient.permission)
  //:: IgnoreOthers
  assert ((length(x)) == (length(x.next) + 1))
}
