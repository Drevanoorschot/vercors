var value:Int

// this does not even need permissions
method parallel_max2(i:Seq[Int], start:Int, end:Int) returns (mx:Int)
{
    var middle:Int
    var ml:Int
    var mr:Int

    if(end-start > 1)
    {
        middle := start + (end-start) \ 2
        ml := parallel_max2(i, start, middle)
        mr := parallel_max2(i, middle, end)
        mx := ml > mr ? ml : mr
    } else {
        mx := i[middle]
    }
}