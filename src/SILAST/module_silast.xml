<?xml version="1.0" encoding="UTF-8"?>
<project name="module_silast" default="compile.module.silast">
  <dirname property="module.silast.basedir" file="${ant.file.module_silast}"/>
  
  <property name="module.jdk.home.silast" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.silast" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.silast" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.silast" value="${compiler.args}"/>
  
  <property name="silast.output.dir" value="${module.silast.basedir}/../out/production/SILAST"/>
  <property name="silast.testoutput.dir" value="${module.silast.basedir}/../out/test/SILAST"/>
  
  <path id="silast.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="silast.module.production.classpath">
    <path refid="${module.jdk.classpath.silast}"/>
    <path refid="library.scala-library-2.9.1.classpath"/>
    <path refid="library.scala-compiler-2.9.1.classpath"/>
  </path>
  
  <path id="silast.runtime.production.module.classpath">
    <pathelement location="${silast.output.dir}"/>
    <path refid="library.scala-library-2.9.1.classpath"/>
    <path refid="library.scala-compiler-2.9.1.classpath"/>
  </path>
  
  <path id="silast.module.classpath">
    <path refid="${module.jdk.classpath.silast}"/>
    <pathelement location="${silast.output.dir}"/>
    <path refid="library.scala-library-2.9.1.classpath"/>
    <path refid="library.scala-compiler-2.9.1.classpath"/>
  </path>
  
  <path id="silast.runtime.module.classpath">
    <pathelement location="${silast.testoutput.dir}"/>
    <pathelement location="${silast.output.dir}"/>
    <path refid="library.scala-library-2.9.1.classpath"/>
    <path refid="library.scala-compiler-2.9.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.silast">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.silast">
    <patternset refid="excluded.from.module.silast"/>
  </patternset>
  
  <path id="silast.module.sourcepath">
    <dirset dir="${module.silast.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.silast" depends="compile.module.silast.production,compile.module.silast.tests" description="Compile module SILAST"/>
  
  <target name="compile.module.silast.production" depends="register.custom.compilers" description="Compile module SILAST; production classes">
    <mkdir dir="${silast.output.dir}"/>
    <javac2 destdir="${silast.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.silast}/javac">
      <compilerarg line="${compiler.args.silast}"/>
      <bootclasspath refid="silast.module.bootclasspath"/>
      <classpath refid="silast.module.production.classpath"/>
      <src refid="silast.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.silast"/>
    </javac2>
    
    <copy todir="${silast.output.dir}">
      <fileset dir="${module.silast.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.silast.tests" depends="register.custom.compilers,compile.module.silast.production" description="compile module SILAST; test classes" unless="skip.tests"/>
  
  <target name="clean.module.silast" description="cleanup module">
    <delete dir="${silast.output.dir}"/>
    <delete dir="${silast.testoutput.dir}"/>
  </target>
</project>