class Main {
  int x,y,z;
  

  requires Perm(x,write)**Perm(y,write)**Perm(z,write);
  ensures  Perm(x,write)**Perm(y,write)**Perm(z,write);
  ensures  x + y == z;
  void main(){
    x=0;
    y=1;
    z=1;
    int t;
    invariant inv(Perm(x,1/2)**Perm(y,1/2)**Perm(z,1/2)** x+y==z){
      t=x+z;
      atomic(inv){
        int tmp=x;
        x=y;
        y=tmp+1;
      }
    }
  }
}


